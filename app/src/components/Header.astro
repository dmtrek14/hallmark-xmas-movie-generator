---
import Navigation from '../components/Navigation.astro'
import ResponsiveToggle from '../components/ResponsiveToggle.astro'
import SkipLinks from '../components/SkipLinks.astro'
import DarkMode from '../components/DarkMode.astro'
---

<header>
  <SkipLinks client:load />
  <section class="padding-16 color-neutral">
    <div class="container temp">
    <span class="iconify" data-icon="si-glyph:christmass-ball" style="color: #009905;" data-width="42" data-height="42" data-rotate="270deg"></span>     
      <Navigation client:load />
       <DarkMode client:load />
    </div>
  </section>
</header>

<style lang="scss">
  @use '../styles/base/breakpoint' as *;

  .container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;

    @include breakpoint(medium) {
      flex-wrap: nowrap;
    }

    img {
      max-height: 40px;
    }
  }
</style>
<script src="https://code.iconify.design/2/2.1.0/iconify.min.js"></script>